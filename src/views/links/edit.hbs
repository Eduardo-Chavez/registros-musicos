  
<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{link.cveMusico}}" method="POST">
                <div class="form-group">
                    <textarea name="nombre" rows="2" class="form-control" minlength="6" maxlength="40" pattern="[A-Za-z0-9]+" placeholder="Nombre" autofocus required>{{link.nombre}} </textarea>
                </div>
                <div class="form-group">
                    <textarea name="direccion" rows="2" class="form-control" minlength="6" maxlength="50" pattern="[A-Za-z0-9]+" placeholder="Direccion" autofocus required>{{link.direccion}} </textarea>
                </div>
                <div class="form-group">
                    <select name="instrumento" class="form-control" placeholder="Planta" required  value="{{link.instrumento}}" >
                        <option selected="true" disabled="disabled">Instrumento</option>
                        <option value="Guitarra acústica">Guitarra acústica</option>
                        <option value="Guitarra eléctrica">Guitarra eléctrica</option>
                        <option value="Bajo">Bajo</option>
                        <option value="Flauta">Flauta</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="date" name="fecha" class="form-control" placeholder="Fecha" required value="{{link.fecha}}"> 
                </div>
                
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Actualizar Musico
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>